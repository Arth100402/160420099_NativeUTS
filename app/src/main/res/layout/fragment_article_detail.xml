<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ArticleDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageViewArtDet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textJudulArticleDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Judul Article"
            app:layout_constraintStart_toEndOf="@+id/imageViewArtDet"
            app:layout_constraintTop_toTopOf="@+id/imageViewArtDet" />

        <TextView
            android:id="@+id/textPenulisArticleDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Penulis"
            app:layout_constraintStart_toStartOf="@+id/textJudulArticleDetail"
            app:layout_constraintTop_toBottomOf="@+id/textJudulArticleDetail" />

        <TextView
            android:id="@+id/textDescArticleDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Description"
            app:layout_constraintStart_toStartOf="@+id/imageViewArtDet"
            app:layout_constraintTop_toBottomOf="@+id/imageViewArtDet" />

        <ProgressBar
            android:id="@+id/progressBarArtDet"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewArtDet"
            app:layout_constraintEnd_toEndOf="@+id/imageViewArtDet"
            app:layout_constraintStart_toStartOf="@+id/imageViewArtDet"
            app:layout_constraintTop_toTopOf="@+id/imageViewArtDet" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>