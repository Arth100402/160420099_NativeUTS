<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.FacilityDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageViewFacDet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <Button
            android:id="@+id/btnBorrowFacDet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="borrow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textDescFacilityDetail" />

        <TextView
            android:id="@+id/textNamaFacilityDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Nama Facility"
            app:layout_constraintStart_toEndOf="@+id/imageViewFacDet"
            app:layout_constraintTop_toTopOf="@+id/imageViewFacDet" />

        <TextView
            android:id="@+id/textTempatFacilityDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Tempat Facility"
            app:layout_constraintStart_toStartOf="@+id/textNamaFacilityDetail"
            app:layout_constraintTop_toBottomOf="@+id/textNamaFacilityDetail" />

        <TextView
            android:id="@+id/textDescFacilityDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Description"
            app:layout_constraintStart_toStartOf="@+id/imageViewFacDet"
            app:layout_constraintTop_toBottomOf="@+id/imageViewFacDet" />

        <ProgressBar
            android:id="@+id/progressBarFacDet"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewFacDet"
            app:layout_constraintEnd_toEndOf="@+id/imageViewFacDet"
            app:layout_constraintStart_toStartOf="@+id/imageViewFacDet"
            app:layout_constraintTop_toTopOf="@+id/imageViewFacDet" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>